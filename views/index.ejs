<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/97ab0026dc.js" crossorigin="anonymous"></script>
     <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"> -->
    <link rel="stylesheet" type="text/css" href="styles.css" />
    <title>Home</title>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="newperson">
      <div class="main">
        <button id="newuser" onclick="showHide()">New Entry</button><br />
        <form class="userform" id="userForm">
          <span>
            <i class="fa-solid fa-hashtag"></i>
            <input
              id="tithe"
              type="number"
              placeholder="Tithe Number"
              name="titheNumber"
              required
            /> </span
          ><br />

          <span>
            <i class="fa fa-user"></i>
            <input
              id="fname"
              type="text"
              placeholder="First Name"
              name="firstName"
              required
            /> </span
          ><br />

          <span>
            <i class="fa-solid fa-coins"></i>
            <input
              id="amount "
              type="number"
              placeholder="Amount"
              name="amount"
              required
            /> </span
          ><br />

          <button id="addEntry" onclick="addEntry()">Add Entry</button>
        </form>
      </div>
    </div>

    <div class="resultsCard">
      <div class="tableTitle">
        <h2>Tithes</h2>
      </div>
        <div class="card-body">
          <table class="table">
            <tr class="tableHeadings">
              <th>Tithe Number</th>
              <th>First Name</th>
              <th>Amount</th>
              <th>Update</th>
              <th>Delete</th>
              
            </tr>

            <tr class="contentArray">
              <td> <% tithes.forEach(tithe => { %>
                <li><%= tithe.tithe_no %></li>
              <% }) %></td>
              <td> <% tithes.forEach(tithe => { %>
                <li><%= tithe.first_name %></li>
              <% }) %></td>
              <td> <% tithes.forEach(tithe => { %>
                <li><%= tithe.amount %></li>
              <% }) %></td>
              <td> <% tithes.forEach(tithe => { %>
                <li><i class="fa fa-pencil" aria-hidden="true"></i></li>
              <% }) %></td>
              <td> <% tithes.forEach(tithe => { %>
                <li id="deleteTithe" name="deleteTithe"><i class="fa fa-trash" aria-hidden="true"></i></li>
              <% }) %></td>
              </tr>
          </table>
        </div>
    
  </div>

    <script src="script.js"></script>
  </body>
</html>






